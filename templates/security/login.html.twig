{% extends 'base.html.twig' %}

{% block title %}Facebook{% endblock %}

{% block body %}
<form method="post">
    <div class="container">
        <div class="row">
            <div class="col-sm-2"></div>
            <main class="col-sm-8">
                <section>
                    <div class="box box--shadow">
                        <div class="row">
                            <div class="col-sm-12">
                                <h1 class="m-b-5">Connexion</h1>
                                {% if error %}
                                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                {% endif %}
                                <div>
                                    <label for="inputUsername">Nom</label>
                                    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="m-b-5 mousetrap form-control" required autofocus>
                                </div>
                                <div>
                                    <label for="inputPassword">Mot de passe</label>
                                    <input type="password" name="password" id="inputPassword" class="mousetrap form-control" required>
                                </div>
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                <div class="checkbox mb-3">
                                    <label>
                                        <input type="checkbox" name="_remember_me"> Se souvenir de moi
                                    </label>
                                </div>

                                <button class="btn btn-outline btn-block m-b-15" type="submit">Connexion</button>
                                <a href="/register">
                                    <div class="text-bold">
                                        S'enregistrer
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                </section>
            </main>
        </div>
    </div>
</form>
{% endblock %}
