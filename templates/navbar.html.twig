                <div class="header__logo">
                    <a href="/">
                        <img loading="eager" src="/images/logos/F_icon.svg" alt="Facebook">
                    </a>
                </div>
            </div>
        </section>

        {% if app.user %}
        <section class="header__bottom affix-top" data-spy="affix" data-offset-top="90">
            <div class="container">
                <nav id="navbar" class="header__nav">
                    <ul class="hidden-xs">
                        <li class="hidden-xs header__logo--responsive">
                        <a loading="lazy" href="/"><img alt="Facebook logo" src="/images/logos/F_icon.svg"></a></li>
                        <li id="/profile" class="navbtn">
                        {% if app.user.avatar is null %}
                            <img src="/images/avatar/default_avatar.jpg" alt="Avatar" class="avatar"><a href="/profile"> {{ app.user.username }}</a></li>
                        {% else %}
                            <img src="{{ app.user.avatar }}" alt="Avatar" class="avatar"><a href="/profile"> {{ app.user.username }}</a></li>
                        {% endif %}
                        <li id="/" class="navbtn"><a href="/">Acceuil</a></li>
                        <li id="/amis" class="navbtn"><a href="/amis">Mes Amis</a></li>
                        <li id="/amis" class="navbtn"><a href="/amis">Ajouter un ami</a></li>
                        <li id="/logout" class="navbtn header__logout"><a href="/logout">Logout</a></li>
                    </ul>
                    <ul class="visible-xs">
                        <li class="hidden-xs header__logo--responsive">
                        <a loading="lazy" href="/"><img alt="Facebook logo" src="/images/logos/F_icon.svg"></a></li>
                        <a href="/profile"><li id="profile" class="navbtn">
                        {% if app.user.avatar is null %}
                            <img src="/images/avatar/default_avatar.jpg" alt="Avatar" class="avatar"> {{ app.user.username }}</li></a>
                        {% else %}
                            <img src="{{ app.user.avatar }}" alt="Avatar" class="avatar"> {{ app.user.username }}</li></a>
                        {% endif %}
                        <a href="/"><li id="/" class="navbtn">Acceuil</li></a>
                        <a href="/amis"><li id="/amis" class="navbtn">Mes Amis</li></a>
                        <a href="/amis"><li id="/amis" class="navbtn">Ajouter un ami</li></a>
                        <a href="/logout"><li id="/logout" class="navbtn header__logout">Logout</li></a>
                    </ul>
                </nav>
            </div>
        </section>
        {% endif %}
    </header>
</div>