<div id="content_wrapper">
    <header>
        <section class="visible-xs header__top affix-top" data-spy="affix" data-offset-top="44">
            <div class="container">
                <div class="header__logo">
                    <a href="/">
                        <img loading="eager" src="/images/logos/F_icon.svg" alt="Facebook">
                    </a>
                </div>
                {% if app.user %}
                    <div class="visible-xs">
                {% else %}
                    <div class="hidden">
                {% endif %}
                    <button class="header__toggle__menu" type="button" name="toggle" aria-label="Toggle menu" title="Toggle menu">
                        <i class="icon icon--large icon--white"><svg viewBox="0 0 1792 1792" xmlns="http://www.w3.org/2000/svg"><path d="M1664 1344v128q0 26-19 45t-45 19H192q-26 0-45-19t-19-45v-128q0-26 19-45t45-19h1408q26 0 45 19t19 45zm0-512v128q0 26-19 45t-45 19H192q-26 0-45-19t-19-45V832q0-26 19-45t45-19h1408q26 0 45 19t19 45zm0-512v128q0 26-19 45t-45 19H192q-26 0-45-19t-19-45V320q0-26 19-45t45-19h1408q26 0 45 19t19 45z"></path></svg></i>
                    </button>
                </div>
            </div>
        </section>

        <section class="hidden-xs header__top">
            <div class="container">
                <div class="header__logo">
                    <a href="/">
                        <img loading="eager" src="/images/logos/F_icon.svg" alt="Facebook">
                    </a>
                </div>
            </div>
        </section>

        {% if app.user %}
        <section class="header__bottom affix-top" data-spy="affix" data-offset-top="90">
            <div class="container">
                <nav id="navbar" class="header__nav">
                    <ul class="hidden-xs">
                        <li class="hidden-xs header__logo--responsive">
                        <a loading="lazy" href="/"><img alt="Facebook logo" src="/images/logos/F_icon.svg"></a></li>
                        <li id="/profile" class="navbtn">
                        {% if app.user.avatar is null %}
                            <img src="/images/avatar/default_avatar.jpg" alt="Avatar" class="avatar"><a href="{{ path('compte') }}"> {{ app.user.username }}</a></li>
                        {% else %}
                            <img src="{{ app.user.avatar }}" alt="Avatar" class="avatar"><a href="{{ path('compte') }}"> {{ app.user.username }}</a></li>
                        {% endif %}
                        <li id="{{ path('accueil') }}" class="navbtn"><a href="{{ path('accueil') }}">Mon Mur</a></li>
                        <li id="{{ path('actualites') }}" class="navbtn"><a href="{{ path('actualites') }}">Actualités</a></li>
                        {% if app.user.getInviteNumber() > 0 %}
                            <li id="{{ path('amis') }}" class="navbtn"><a href="{{ path('amis') }}">Mes Amis <span class="badge badge--danger">{{ app.user.getInviteNumber() }}</span></a></li>
                        {% else %}
                            <li id="{{ path('amis') }}" class="navbtn"><a href="{{ path('amis') }}">Mes Amis</a></li>
                        {% endif %}
                        <li id="{{ path('app_logout') }}" class="navbtn header__logout"><a href="{{ path('app_logout') }}">Logout</a></li>
                    </ul>
                    <ul class="visible-xs">
                        <li class="hidden-xs header__logo--responsive">
                            <a loading="lazy" href="{{ path('accueil') }}"><img alt="Facebook logo" src="/images/logos/F_icon.svg"></a>
                        </li>
                        <a href="{{ path('compte') }}"><li id="profile" class="navbtn">
                        {% if app.user.avatar is null %}
                            <img src="/images/avatar/default_avatar.jpg" alt="Avatar" class="avatar"> {{ app.user.username }}</li></a>
                        {% else %}
                            <img src="{{ app.user.avatar }}" alt="Avatar" class="avatar"> {{ app.user.username }}</li></a>
                        {% endif %}
                        <a href="{{ path('accueil') }}"><li id="{{ path('accueil') }}" class="navbtn">Mon Mur</li></a>
                        <a href="{{ path('actualites') }}"><li id="{{ path('actualites') }}" class="navbtn">Actualités</li></a>
                        {% if app.user.getInviteNumber() > 0 %}
                            <a href="{{ path('amis') }}"><li id="{{ path('amis') }}" class="navbtn">Mes Amis <span class="badge badge--danger">{{ app.user.getInviteNumber() }}</span></li></a>
                        {% else %}
                            <a href="{{ path('amis') }}"><li id="{{ path('amis') }}" class="navbtn">Mes Amis</li></a>
                        {% endif %}
                        <a href="{{ path('app_logout') }}"><li id="{{ path('app_logout') }}" class="navbtn header__logout">Logout</li></a>
                    </ul>
                </nav>
            </div>
        </section>
        {% endif %}
    </header>
</div>