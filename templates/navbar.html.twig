<div id="content_wrapper">
    <header>
        <section class="visible-xs header__top affix-top" data-spy="affix" data-offset-top="44">
            <div class="container">
                <div class="header__logo">
                    <a href="/">
                        <img loading="eager" src="/images/logos/F_icon.svg" alt="Facebook">
                    </a>
                </div>
                {% if app.user %}
                    <div class="visible-xs">
                {% else %}
                    <div class="hidden">
                {% endif %}
                    <button class="header__toggle__menu" type="button" name="toggle" aria-label="Toggle menu" title="Toggle menu">
